{
  "name": "plots",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.3.8",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "bun --filter web dev",
    "dev:cli": "bun --filter cli dev",
    "dev:api": "bun --filter api dev",
    "build": "turbo build",
    "build:web": "bun --filter web build",
    "build:cli": "bun --filter cli build",
    "build:api": "bun --filter api build",
    "lint": "turbo lint",
    "type-check": "turbo type-check"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20"
  }
}
